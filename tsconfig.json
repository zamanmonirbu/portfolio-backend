{
  "compilerOptions": {
    "module": "commonjs",              
    "moduleResolution": "node",        
    "target": "ES2021",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": "src",
    "outDir": "dist"
  }
}
